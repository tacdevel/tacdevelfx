<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- General Info -->
  <PropertyGroup>
    <RepoVersionMajor>0</RepoVersionMajor>
    <RepoVersionMinor>1</RepoVersionMinor>
    <RepoVersionPatch>0</RepoVersionPatch>
    <RepoVersion>$(RepoVersionMajor).$(RepoVersionMinor).$(RepoVersionPatch)</RepoVersion>
    <RepoVersion Condition="'$(RepoVersionSuffix)'!=''">$(RepoVersion)-$(RepoVersionSuffix)</RepoVersion>
    <RepoAuthors>Thomas Corwin, et al.</RepoAuthors>
    <RepoCopyright>Copyright (c) Thomas Corwin, et al. All Rights Reserved.</RepoCopyright>
    <RepoURL>https://github.com/tacdevel/tcdfx</RepoURL>
  </PropertyGroup>

  <!-- Repository Paths -->
  <PropertyGroup>
    <RepoBasePath>$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), README.md))\</RepoBasePath>
    <RepoBuildPath>$(RepoBasePath)build\</RepoBuildPath>
    <RepoBuildBinPath>$(RepoBuildPath)bin\</RepoBuildBinPath>
    <RepoBuildDocPath>$(RepoBuildPath)doc\</RepoBuildDocPath>
    <RepoBuildObjPath>$(RepoBuildPath)obj\</RepoBuildObjPath>
    <RepoBuildPkgPath>$(RepoBuildPath)pkg\</RepoBuildPkgPath>
    <RepoSourcePath>$(RepoBasePath)source\</RepoSourcePath>
  </PropertyGroup>
</Project>