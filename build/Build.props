<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Global Repository Information -->
  <PropertyGroup>
    <TCDFxAuthors>Thomas Corwin, et al.</TCDFxAuthors>
    <TCDFxCopyrights>Copyright (c) Thomas Corwin, et al. All Rights Reserved.</TCDFxCopyrights>
    <TCDFxRepositoryURL>https://github.com/tacdevel/tcdfx</TCDFxRepositoryURL>
    <TCDFxLicenseURL>$(TCDFxRepositoryURL)/blob/master/LICENSE.md</TCDFxLicenseURL>
  </PropertyGroup>

  <!-- Global Version Information -->
  <PropertyGroup>
    <TCDFxVersionMajor>0</TCDFxVersionMajor>
    <TCDFxVersionMinor>1</TCDFxVersionMinor>
    <TCDFxVersionPatch>1</TCDFxVersionPatch>
    <TCDFxVersion Condition="'$(TCDFxVersionSuffix)'==''">$(TCDFxVersionMajor).$(TCDFxVersionMinor).$(TCDFxVersionPatch)</TCDFxVersion>
    <TCDFxVersion Condition="'$(TCDFxVersionSuffix)'!=''">$$(TCDFxVersionMajor).$(TCDFxVersionMinor).$(TCDFxVersionPatch)-$(TCDFxVersionSuffix)</TCDFxVersion>
  </PropertyGroup>

  <!-- Global Repository Paths -->
  <PropertyGroup>
    <TCDFxBasePath>$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), README.md))\</TCDFxBasePath>
    <TCDFxBuildPath>$(TCDFxBasePath)build\</TCDFxBuildPath>
    <TCDFxBuildBinPath>$(TCDFxBuildPath)bin\</TCDFxBuildBinPath>
    <TCDFxBuildDocPath>$(TCDFxBuildPath)doc\</TCDFxBuildDocPath>
    <TCDFxBuildObjPath>$(TCDFxBuildPath)obj\</TCDFxBuildObjPath>
    <TCDFxBuildPkgPath>$(TCDFxBuildPath)pkg\</TCDFxBuildPkgPath>
    <TCDFxSourcePath>$(TCDFxBasePath)source\</TCDFxSourcePath>
  </PropertyGroup>
</Project>