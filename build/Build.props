<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <TCDFxVersionMajor>0</TCDFxVersionMajor>
    <TCDFxVersionMinor>1</TCDFxVersionMinor>
    <TCDFxVersionPatch>0</TCDFxVersionPatch>
    <TCDFxVersionSuffix></TCDFxVersionSuffix>
    <TCDFxAuthors>Thomas Corwin, et al.</TCDFxAuthors>
    <TCDFxCopyright>Copyright (c) Thomas Corwin, et al. All Rights Reserved.</TCDFxCopyright>
    <TCDFxRepoURL>https://github.com/tacdevel/TCDFx</TCDFxRepoURL>
  </PropertyGroup>

  <!-- Repository Paths -->
  <PropertyGroup>
    <RepoBasePath>$(MSBuildThisFileDirectory)..\</RepoBasePath>
    <RepoBuildPath>$(RepoBasePath)build\</RepoBuildPath>
    <RepoBuildBinPath>$(RepoBasePath)build\bin\</RepoBuildBinPath>
    <RepoBuildDocPath>$(RepoBasePath)build\doc\</RepoBuildDocPath>
    <RepoBuildObjPath>$(RepoBasePath)build\obj\</RepoBuildObjPath>
    <RepoBuildPkgPath>$(RepoBasePath)build\pkg\</RepoBuildPkgPath>
    <RepoExternalPath>$(RepoBasePath)external\</RepoExternalPath>
    <RepoSourcePath>$(RepoBasePath)source\</RepoSourcePath>
  </PropertyGroup>

  <!-- MSBuild Output Paths -->
  <PropertyGroup>
    <BaseIntermediateOutputPath>$(RepoBuildObjPath)$(MSBuildProjectName)\</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)$(Configuration)\</IntermediateOutputPath>
    <BaseOutputPath>$(RepoBuildBinPath)$(MSBuildProjectName)\</BaseOutputPath>
    <OutputPath>$(BaseOutputPath)$(Configuration)\</OutputPath>
    <DocumentationFile Condition="'$(Configuration)'=='Release'">$(RepoBuildDocPath)$(MSBuildProjectName).xml</DocumentationFile>
    <PackageOutputPath Condition="'$(Configuration)'=='Release'">$(RepoBuildPkgPath)</PackageOutputPath>
  </PropertyGroup>

  <!-- MSBuild Properties -->
  <PropertyGroup>
    <AssemblyName>$(MSBuildProjectName)</AssemblyName>
    <AssemblyTitle>$(MSBuildProjectName)</AssemblyTitle>
    <Version>$(TCDFxVersion)</Version>
    <Authors>$(TCDFxAuthors)</Authors>
    <Copyright>$(TCDFxCopyright)</Copyright>
    <Description />
    <EnableDefaultItems>false</EnableDefaultItems>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <NeutralLanguage>en-US</NeutralLanguage>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <!-- MSBuild Properties (Debug)-->
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <CheckForOverflowUnderflow>false</CheckForOverflowUnderflow>
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
    <DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
  </PropertyGroup>

  <!-- MSBuild Properties (Release) -->
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <Optimize>true</Optimize>
    <DebugType>embedded</DebugType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags></PackageTags>
    <PackageId>$(MSBuildProjectName)</PackageId>
    <PackageProjectUrl>https://github.com/tacdevel/tcdfx</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/tacdevel/tcdfx/blob/master/LICENSE.md</PackageLicenseUrl>
    <PackageReleaseNotes>Version $(Version)</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/tacdevel/tcdfx</RepositoryUrl>
  </PropertyGroup>

  <!-- Shared License Files -->
  <ItemGroup>
    <Content Include="../../LICENSE.md">
      <CopyToOutputDirectory>true</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
    <Content Include="../../THIRD_PARTY_NOTICES.md">
      <CopyToOutputDirectory>true</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
</Project>