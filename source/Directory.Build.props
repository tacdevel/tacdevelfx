<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="..\Directory.Build.props" />
  <!-- Output Paths -->
  <PropertyGroup>
    <BaseIntermediateOutputPath>$(TCDFxSourceBuildObjPath)$(MSBuildProjectName)\</BaseIntermediateOutputPath>
    <IntermediateOutputPath>$(BaseIntermediateOutputPath)$(Configuration)\</IntermediateOutputPath>
    <BaseOutputPath>$(TCDFxSourceBuildBinPath)$(MSBuildProjectName)\</BaseOutputPath>
    <OutputPath>$(BaseOutputPath)$(Configuration)\</OutputPath>
    <DocumentationFile Condition="'$(Configuration)'=='Release'">$(TCDFxSourceBuildDocPath)$(MSBuildProjectName)\doc.xml</DocumentationFile>
    <PackageOutputPath Condition="'$(Configuration)'=='Release'">$(TCDFxSourceBuildPkgPath)$(MSBuildProjectName)\</PackageOutputPath>
  </PropertyGroup>

  <!-- MSBuild Properties -->
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
    <OutputType>Library</OutputType>
    <Configuration Condition="'$(Configuration)'==''">Release</Configuration>
    <AssemblyName>$(MSBuildProjectName)</AssemblyName>
    <AssemblyTitle>$(MSBuildProjectName)</AssemblyTitle>
    <VersionPrefix>$(TCDFxVersionPrefix)</VersionPrefix>
    <Authors>$(TCDFxAuthors)</Authors>
    <Copyright>$(TCDFxCopyrights)</Copyright>
    <Description />
    <EnableDefaultItems>false</EnableDefaultItems>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <NeutralLanguage>en-US</NeutralLanguage>
    <DebugSymbols>true</DebugSymbols>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <!-- MSBuild Properties (Debug)-->
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <CheckForOverflowUnderflow>false</CheckForOverflowUnderflow>
    <Optimize>false</Optimize>
    <DebugType>full</DebugType>
    <DefineConstants>$(DefineConstants);DEBUG</DefineConstants>
  </PropertyGroup>

  <!-- MSBuild Properties (Release) -->
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <CheckForOverflowUnderflow>true</CheckForOverflowUnderflow>
    <Optimize>true</Optimize>
    <DebugType>embedded</DebugType>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags></PackageTags>
    <PackageId>$(MSBuildProjectName)</PackageId>
    <PackageProjectUrl>$(TCDFxRepoURL)</PackageProjectUrl>
    <PackageLicenseUrl>$(TCDFxLicenseURL)</PackageLicenseUrl>
    <PackageReleaseNotes>Version $(Version)</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>$(TCDFxRepoURL)</RepositoryUrl>
  </PropertyGroup>

  <!-- Common Source -->
  <ItemGroup>
    <Compile Include="$(TCDFxSourceCommonPath)src\Assembly.Common.cs" Link="src\Assembly.Common.cs"/>
  </ItemGroup>
  
  <!-- Shared Content -->
  <ItemGroup>
    <Content Include="..\..\LICENSE.md">
      <CopyToOutputDirectory>true</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
    <Content Include="..\..\THIRD_PARTY_NOTICES.md">
      <CopyToOutputDirectory>true</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
</Project>